{
  "name": "@dailydotdev/node-common",
  "version": "0.0.7",
  "description": "Shared packages for daily.dev Node.js projects",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dailydotdev/node-common.git"
  },
  "contributors": [
    "omBratteng"
  ],
  "type": "module",
  "exports": {
    "./logger": {
      "import": {
        "types": "./dist/logger/index.d.ts",
        "default": "./dist/logger/index.js"
      },
      "require": {
        "types": "./dist/logger/index.d.cts",
        "default": "./dist/logger/index.cjs"
      }
    },
    "./telemetry": {
      "import": {
        "types": "./dist/telemetry/index.d.ts",
        "default": "./dist/telemetry/index.js"
      },
      "require": {
        "types": "./dist/telemetry/index.d.cts",
        "default": "./dist/telemetry/index.cjs"
      }
    },
    "./telemetry/plugin": {
      "import": {
        "types": "./dist/telemetry/plugin.d.ts",
        "default": "./dist/telemetry/plugin.js"
      },
      "require": {
        "types": "./dist/telemetry/plugin.d.cts",
        "default": "./dist/telemetry/plugin.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils/index.js"
      },
      "require": {
        "types": "./dist/utils/index.d.cts",
        "default": "./dist/utils/index.cjs"
      }
    },
    "./utils/env": {
      "import": {
        "types": "./dist/utils/env.d.ts",
        "default": "./dist/utils/env.js"
      },
      "require": {
        "types": "./dist/utils/env.d.cts",
        "default": "./dist/utils/env.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      "logger": [
        "dist/logger/index.d.ts"
      ],
      "telemetry": [
        "dist/telemetry/index.d.ts"
      ],
      "telemetry/plugin": [
        "dist/telemetry/plugin.d.ts"
      ],
      "utils": [
        "dist/utils/index.d.ts"
      ],
      "utils/env": [
        "dist/utils/env.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cp -r src/types dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@google-cloud/pino-logging-gcp-config": "^1.3.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.5.1",
    "@opentelemetry/semantic-conventions": "^1.40.0",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "pino": "^10.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/node": "22.x",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "packageManager": "pnpm@10.30.3"
}
